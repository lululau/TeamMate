<%- model_class = TaskJournal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:time_entry_hours) %>:</strong></dt>
  <dd><%= @task_journal.time_entry_hours %></dd>
  <dt><strong><%= model_class.human_attribute_name(:old_done_ratio) %>:</strong></dt>
  <dd><%= @task_journal.old_done_ratio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:new_done_ratio) %>:</strong></dt>
  <dd><%= @task_journal.new_done_ratio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:task_id) %>:</strong></dt>
  <dd><%= @task_journal.task_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:operator_id) %>:</strong></dt>
  <dd><%= @task_journal.operator_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              task_journals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_task_journal_path(@task_journal), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              task_journal_path(@task_journal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
