<%- model_class = TaskJournal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:time_entry_hours) %></th>
      <th><%= model_class.human_attribute_name(:old_done_ratio) %></th>
      <th><%= model_class.human_attribute_name(:new_done_ratio) %></th>
      <th><%= model_class.human_attribute_name(:task_id) %></th>
      <th><%= model_class.human_attribute_name(:operator_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @task_journals.each do |task_journal| %>
      <tr>
        <td><%= link_to task_journal.id, task_journal_path(task_journal) %></td>
        <td><%= task_journal.time_entry_hours %></td>
        <td><%= task_journal.old_done_ratio %></td>
        <td><%= task_journal.new_done_ratio %></td>
        <td><%= task_journal.task_id %></td>
        <td><%= task_journal.operator_id %></td>
        <td><%=l task_journal.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_task_journal_path(task_journal), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      task_journal_path(task_journal),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_task_journal_path,
            :class => 'btn btn-primary' %>
