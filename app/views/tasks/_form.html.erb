<%= simple_form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :category %>
  <%= f.input :subject %>
  <%= f.input :description %>
  <%= f.input :priority %>
  <%= f.input :assigned_to_user_id %>
  <%= f.input :parent_id %>
  <%= f.input :start_date, :as => 'date_picker' %>
  <%= f.input :due_date, :as => 'date_picker' %>
  <%= f.input :at_risk %>
  <%= f.input :reason_of_risk %>
  <%= f.input :project_id %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tasks_path, :class => 'btn btn-default' %>
<% end %>
