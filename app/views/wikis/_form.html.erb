<%= simple_form_for [@project, @wiki], :html => { :class => 'form-horizontal'} do |f| %>
    <%= f.association :author, :collection => User.all, :input_html => {:class => 'chosen-select'}, :label_html => {:style => 'text-align: left'} %>
    <%= f.association :contributors, :collection => User.all, :input_html => {:class => 'chosen-select'}, :label_html => {:style => 'text-align: left'} %>

    <% if @project.root_wiki_id == @wiki.id %>
        <%= f.association :parent, :as => :hidden %>
    <% else %>
        <%= f.association :parent, :collection => @project.wikis.all, :label_method => :subject, :input_html => { :class => 'chosen-select' }, :label_html => {:style => 'text-align: left'} %>
    <% end %>
    <div class="form-group">
    <div class="col-lg-12">
      <%= f.input_field :content, :rows => 30 %>
    </div>
  </div>

  <%= f.button :submit, :class => 'btn-primary' %>

  <% if not @wiki.new_record? %>
        <%= link_to t('.destroy', :default => t('helpers.links.destroy')),
              project_wiki_path(@project, @wiki), :method => :delete, :data => {:confirm => '确定要删除吗？'}, :class => 'btn btn-danger' %>
  <% end %>
<% end %>
