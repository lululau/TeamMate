<%= simple_form_for @project, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description, :input_html => {:rows => 10} %>
  <%= f.input :public %>
  <%= f.association :managers, :collection => User.all, :input_html => {:class => 'chosen-select'} %>
  <%= f.association :members, :collection => User.all, :input_html => {:class => 'chosen-select'} %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projects_path, :class => 'btn btn-default' %>
<% end %>
