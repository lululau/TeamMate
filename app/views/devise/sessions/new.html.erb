<div class="row">
  <div class="col-lg-12">
    <h2>TeamMate</h2>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <%= bootstrap_flash %>
  </div>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :wrapper => :inline, :html => {:class => 'form-inline'}) do |f| %>
<div class="row" style="padding-top: 20%">
    <div class="row">
      <div class="col-lg-12">
        <%= f.input :email, :required => false, :autofocus => true, :placeholder => "Email 地址" %>
        <%= f.input :password, :required => false, :placeholder => "密码" %>
        <%= f.button :submit, "登陆", :class => 'btn-primary col-lg-2' %>
      </div>
    </div>


    <% if devise_mapping.rememberable? %>

        <div class="row">
          <div class="col-lg-12">
            <div class="col-lg-4"></div>
            <div class="checkbox col-lg-4" style="padding-left: 15px">
              <%= f.check_box :remember_me %>
              <label for="user_remember_me">
               记住我
              </label>
            </div>
          </div>
        </div>
    <% end %>
</div>
<% end %>
<br/><br/>
<%= render "devise/shared/links" %>
